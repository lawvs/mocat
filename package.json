{
  "name": "mocat",
  "private": true,
  "description": "mocking for ajax requests",
  "keywords": [
    "mock",
    "mockAjax"
  ],
  "homepage": "https://github.com/lawvs/mocat#readme",
  "bugs": {
    "url": "https://github.com/lawvs/mocat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lawvs/mocat"
  },
  "license": "MIT",
  "author": "lawvs",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "rm -rf coverage && lerna run --parallel clean",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "server-examples": "lerna run dev --parallel --scope *-example",
    "test": "jest",
    "test:e2e": "cypress run",
    "test:e2e-ci": "start-server-and-test server-examples '3001|3002|3003' test:e2e",
    "typecheck": "lerna exec --parallel --ignore @mocat/eslint-config --ignore global-example --ignore esm-example -- tsc --noEmit --project ."
  },
  "devDependencies": {
    "@jest/types": "^28.1.1",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/node-fetch": "^2.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lerna": "^5.1.1",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "optionalDependencies": {
    "cypress": "^10.1.0",
    "start-server-and-test": "^1.14.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": "please-use-pnpm",
    "pnpm": ">=7.0.0",
    "yarn": "please-use-pnpm"
  }
}
