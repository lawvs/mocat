{
  "name": "mocat",
  "private": true,
  "description": "mocking for ajax requests",
  "keywords": [
    "mock",
    "mockAjax"
  ],
  "homepage": "https://github.com/lawvs/mocat#readme",
  "bugs": {
    "url": "https://github.com/lawvs/mocat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lawvs/mocat"
  },
  "license": "MIT",
  "author": "lawvs",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "rm -rf coverage && lerna run --parallel clean",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "server-examples": "lerna run dev --parallel --scope *-example",
    "cy:run": "cypress run",
    "cy:ci": "start-server-and-test server-examples '3001|3002' cy:run",
    "test:jest": "jest",
    "test": "yarn test:jest && yarn test:cy",
    "test:ci": "yarn test:jest --coverage && yarn cy:ci",
    "typecheck": "lerna exec --parallel --ignore eslint-config --ignore global-example -- tsc --noEmit --project ."
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.23",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "ts-jest": "^26.1.3",
    "typescript": "^4.0.2"
  },
  "optionalDependencies": {
    "cypress": "^5.6.0",
    "start-server-and-test": "^1.11.5"
  }
}
